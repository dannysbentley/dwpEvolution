<Window x:Class="dwpEvolution.UI_Rhino2Revit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" 
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Title="dwp | Evolution 2024.01.17   |  Revit to Rhino"
        Foreground="Black" 
        Background="White"
        FontFamily="Segoe UI">
    <Grid>
        <Button x:Name="SelectFileButton" Content="Select File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10" Click="SelectFileButton_Click"/>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="10,50,0,0" IsReadOnly="True"/>
    </Grid>
</Window>